<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Az.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Az"
    Shell.FlyoutBehavior="Disabled"
    Title="Az">


    <TabBar>

        <Tab Title="Student" Icon="student.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="Main.Page"/>
        </Tab>

        <Tab Title="Course" Icon="course.png">
            <ShellContent ContentTemplate="{DataTemplate local:CoursePage}" Route="CourrsePage" />

        </Tab>

        <Tab Title="Enrollment" Icon="enroll.png">
            <ShellContent ContentTemplate="{DataTemplate local:EnrollmentPage}" Route="EnrollmentPage" />
        </Tab>


    </TabBar>

</Shell>
